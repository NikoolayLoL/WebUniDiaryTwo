@page
@model WebUniDiaryTwo.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

@Html.Partial("Admin/_ToolBar")

@if (Model.successMessage.Length > 0)
{
    <div class="alert alert-success alert-dismissible position-fixed top-0 start-50 translate-middle-x mt-5" style="z-index: 1050; width: 80%;" role="alert">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        @Model.successMessage
    </div>
}

@if (Model.failureMessage.Length > 0)
{
    <div class="alert alert-danger alert-dismissible position-fixed top-0 start-50 translate-middle-x mt-5" style="z-index: 1050; width: 80%;" role="alert">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        @Model.failureMessage
    </div>
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1 class="display-4">Welcome to the Admin Dashboard</h1>
            <p class="lead">Manage users, view statistics, and perform administrative tasks.</p>
            <hr />
        </div>
    </div>

    <div class="row mt-5">
        <!-- Users Management Section -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4>Users Management</h4>
                </div>
                <div class="card-body">
                    <p>Manage all users in the system.</p>
                    <a href="/Admin/BrowseStudents" class="btn btn-primary">Manage Users</a>
                </div>
            </div>
        </div>

        <!-- Statistics Section -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4>Subjects</h4>
                </div>
                <div class="card-body">
                    <p>View all Subjects.</p>
                    <a href="/Admin/BrowseSubjects" class="btn btn-success">View Subjects</a>
                </div>
            </div>
        </div>

        <!-- Settings Section -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-warning text-white">
                    <h4>Settings</h4>
                </div>
                <div class="card-body">
                    <p>Configure system settings.</p>
                    <a href="/Admin/Settings" class="btn btn-warning">Settings</a>
                </div>
            </div>
        </div>
    </div>
</div>