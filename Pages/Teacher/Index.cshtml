<div class="container mt-4">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1 class="display-4">Welcome to the Teacher Dashboard</h1>
            <p class="lead">Manage classes, view student progress, and perform teaching tasks.</p>
            <hr />
        </div>
    </div>

    <div class="row mt-5">
        <!-- Classes Management Section -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4>Classes Management</h4>
                </div>
                <div class="card-body">
                    <p>Manage all your classes and students.</p>
                    <a href="/Teacher/BrowseClasses" class="btn btn-primary">Manage Classes</a>
                </div>
            </div>
        </div>

        <!-- Grades Section -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4>Grades</h4>
                </div>
                <div class="card-body">
                    <p>View and record student grades.</p>
                    <a href="/Teacher/Grades" class="btn btn-success">View Grades</a>
                </div>
            </div>
        </div>

        <!-- Schedule Section -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-warning text-white">
                    <h4>Schedule</h4>
                </div>
                <div class="card-body">
                    <p>View and manage your schedule.</p>
                    <a href="/Teacher/Schedule" class="btn btn-warning">View Schedule</a>
                </div>
            </div>
        </div>
    </div>
</div>