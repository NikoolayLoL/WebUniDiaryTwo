@page
@model WebUniDiaryTwo.Pages.Student.IndexModel
@{
    ViewData["Title"] = "Student Dashboard";
}

@Html.Partial("Student/_ToolBar")

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-12 text-center">
            <h2 class="display-4">Welcome, @Model.User.FirstName @Model.User.LastName</h2>
            <p class="lead">Here's your academic overview</p>
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h3>Your Semesters</h3>
            @if (Model.SemesterUsers.Any())
            {
                <div class="row">
                    @foreach (var semesterUser in Model.SemesterUsers)
                    {
                        <div class="col-md-6 mb-4">
                            <div class="card">
                                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                                    <h4 class="mb-0">@semesterUser.Semester.Name</h4>
                                    <a href="/Student/SemesterOverview?semesterId=@(semesterUser.SemesterId)" class="btn btn-light">View</a>
                                </div>
                                <div class="card-body">
                                    <p><strong>Start Date:</strong> @semesterUser.Semester.StartDate.ToString("yyyy-MM-dd")</p>
                                    <p><strong>End Date:</strong> @semesterUser.Semester.EndDate.ToString("yyyy-MM-dd")</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-danger" role="alert">
                    You are not enrolled in any semesters currently.
                </div>
            }
        </div>
    </div>
</div>
